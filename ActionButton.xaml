<UserControl x:Class="mahjongNEA.ActionButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mahjongNEA"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Margin="20,0,20,0">
    <Grid Background="Transparent">
        <Popup x:Name="actionPopup" StaysOpen="False" IsOpen="False" HorizontalAlignment="Center"
               Placement="Top">
            <Border Background="Transparent" BorderThickness="1" BorderBrush="Black">
                <Grid Background="LightGray" x:Name="actionSelectGrid"/>
            </Border>
        </Popup>
        <Button x:Name="actionButton" Click="actionButton_Click" FontSize="25" FontWeight="Bold"/>
    </Grid>
</UserControl>
