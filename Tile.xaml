<UserControl x:Class="mahjongNEA.Tile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:mahjongNEA"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid MouseEnter="tileImage_MouseEnter" MouseLeave="tileImage_MouseLeave" Background="Transparent">
        <Border x:Name ="tileBorder" BorderBrush="Black" BorderThickness="1">
            <Image x:Name="tileImage" Margin="1,0,1,0"/>
        </Border>
    </Grid>
</UserControl>